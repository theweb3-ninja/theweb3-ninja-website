{
  "extends": "./tsconfig.json",
  "include": ["workers/**/*", "worker-configuration.d.ts"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@react-router/node", "vite/client", "./worker-configuration.d.ts"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDirs": ["./worker", "./.react-router/types"]
  }
}
